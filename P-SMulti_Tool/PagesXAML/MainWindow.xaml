<Window x:Class="P_SMulti_Tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P_SMulti_Tool"
        mc:Ignorable="d" Background="Navy" Width ="1616"  Height="720" 
        Title="MainWindow">

    <Grid Name="GridPanel" Background="Navy">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="C0" Width="*"/>
            <ColumnDefinition Name="C1" Width="*"/>
            <ColumnDefinition Name="C2" Width="*"/>
            <ColumnDefinition Name="C3" Width="*"/>
            <ColumnDefinition Name="C4" Width="*"/>
            <ColumnDefinition Name="C5" Width="*"/>
            <ColumnDefinition Name="C6" Width="*"/>
            <ColumnDefinition Name="C7" Width="*"/>
            <ColumnDefinition Name="C8" Width="*"/>
            <ColumnDefinition Name="C9" Width="*"/>
            <ColumnDefinition Name="C10" Width="*"/>
            <ColumnDefinition Name="C11" Width="*"/>
            <ColumnDefinition Name="C12" Width="*"/>
            <ColumnDefinition Name="C13" Width="*"/>
            <ColumnDefinition Name="C14" Width="*"/>
            <ColumnDefinition Name="C15" Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Name="R0" Height="*"/>
            <RowDefinition Name="R1" Height="*"/>
            <RowDefinition Name="R2" Height="*"/>
            <RowDefinition Name="R3" Height="*"/>
            <RowDefinition Name="R4" Height="*"/>
            <RowDefinition Name="R5" Height="*"/>
            <RowDefinition Name="R6" Height="*"/>
            <RowDefinition Name="R7" Height="*"/>
            <RowDefinition Name="R8" Height="*"/>
            <RowDefinition Name="R9" Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="16" Grid.RowSpan="1" Background="Yellow">
            <Button x:Name="Rosebery" Content="Rosebery Collections" Width="300" BorderBrush="Navy" Background="Yellow" Foreground="Navy" FontSize="28" Click="Rosebery_Click"/>
            <Button x:Name="Residential" Content="Residential Collections" Width="300" BorderBrush="Navy" Background="Yellow" Foreground="Navy" FontSize="28" Click="Residential_Click"/>
            <Label x:Name="AppTitle" Content="Collections Manager V1" Width="400" Background="Navy" BorderBrush="Navy" BorderThickness="2" Foreground="Yellow" HorizontalContentAlignment="Center" FontSize="35"/>
            <Button x:Name="Auction" Content="Auction Collections" Width="300" BorderBrush="Navy" Background="Yellow" Foreground="Navy" FontSize="28" Click="Auction_Click"/>
            <Button x:Name="Overview" Content="Overview" Width="300" BorderBrush="Navy" Background="Yellow" Foreground="Navy" FontSize="28" Click="Overview_Click"/>
        </StackPanel>
        <Frame x:Name="Main" Grid.Row="1" Grid.RowSpan="10" Grid.Column="0" Grid.ColumnSpan="16" NavigationUIVisibility="Hidden"/>


        <Image Grid.Row="15" Grid.Column="7" Grid.ColumnSpan="2">
            <Image.Source>
                <BitmapImage  UriSource="C:\Users\chris\Source\Repos\P-SMulti_Tool\P-SMulti_Tool\Images\pack-send-logo-header.png"/>
            </Image.Source>
        </Image>

    </Grid>
</Window>
